# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/postgres?schema=public&sslmode=prefer

# Nest run locally
DB_HOST=localhost
# Nest run in docker, change host to database container name
# DB_HOST=cinepik-catalog-db
DB_PORT=5432
DB_SCHEMA=public

# Nest
PORT=3001
# Set NODE ENV to development or production
NODE_ENV=development

# Keycloak
# KEYCLOAK_BASE_URL="http://localhost:8080" # Running locally
KEYCLOAK_BASE_URL="http://cinepik-keycloak:8080" # Running in docker
KEYCLOAK_REALM="cinepik"
KEYCLOAK_CLIENT_ID="nest-auth"
KEYCLOAK_CLIENT_SECRET="<REPLACE_ME>"
KEYCLOAK_ADMIN_CLIENT_SECRET="<REPLACE_ME>"
KEYCLOAK_PORT = 8080